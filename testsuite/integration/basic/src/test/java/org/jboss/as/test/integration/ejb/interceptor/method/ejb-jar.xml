<ejb-jar xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_0.xsd"
         version="3.0">

   <interceptors>
     <interceptor>
     	<!-- AroundInvoke override definition -->
        <interceptor-class>org.jboss.as.test.integration.ejb.interceptor.method.AroundInvokeInterceptor</interceptor-class>
		<around-invoke>
			<method-name>interceptDD</method-name>
		</around-invoke>
     </interceptor>
   </interceptors>

    <assembly-descriptor>
        <interceptor-binding>
            <ejb-name>ClassifiedBean</ejb-name>
            <interceptor-class>org.jboss.as.test.integration.ejb.interceptor.method.TopSecretInterceptor
            </interceptor-class>
            <method>
                <method-name>overloadedMethod</method-name>
                <method-params>
                    <method-param>java.lang.String</method-param>
                </method-params>
            </method>
        </interceptor-binding>
        <interceptor-binding>
            <ejb-name>ClassifiedBean</ejb-name>
            <interceptor-class>org.jboss.as.test.integration.ejb.interceptor.method.TopSecretInterceptor
            </interceptor-class>
            <method>
                <method-name>overridedMethod</method-name>
                <method-params>
                    <method-param>java.lang.String</method-param>
                    <method-param>java.lang.String</method-param>
                </method-params>
            </method>
        </interceptor-binding>

        <!-- array bindings for objects and primitives -->
        <interceptor-binding>
            <ejb-name>ClassifiedBean</ejb-name>
            <interceptor-class>org.jboss.as.test.integration.ejb.interceptor.method.TopSecretInterceptor
            </interceptor-class>
            <method>
                <method-name>methodWithByteArrayArgument</method-name>
                <method-params>
                    <method-param>java.lang.byte[]</method-param>
                </method-params>
            </method>
        </interceptor-binding>
        <interceptor-binding>
            <ejb-name>ClassifiedBean</ejb-name>
            <interceptor-class>org.jboss.as.test.integration.ejb.interceptor.method.TopSecretInterceptor
            </interceptor-class>
            <method>
                <method-name>methodWithBooleanArrayArgument</method-name>
                <method-params>
                    <method-param>boolean[]</method-param>
                </method-params>
            </method>
        </interceptor-binding>
        <interceptor-binding>
            <ejb-name>ClassifiedBean</ejb-name>
            <interceptor-class>org.jboss.as.test.integration.ejb.interceptor.method.TopSecretInterceptor
            </interceptor-class>
            <method>
                <method-name>methodWithCharArrayArgument</method-name>
                <method-params>
                    <method-param>java.lang.char[]</method-param>
                </method-params>
            </method>
        </interceptor-binding>
        <interceptor-binding>
            <ejb-name>ClassifiedBean</ejb-name>
            <interceptor-class>org.jboss.as.test.integration.ejb.interceptor.method.TopSecretInterceptor
            </interceptor-class>
            <method>
                <method-name>methodWithDoubleArrayArgument</method-name>
                <method-params>
                    <method-param>double[]</method-param>
                </method-params>
            </method>
        </interceptor-binding>
        <interceptor-binding>
            <ejb-name>ClassifiedBean</ejb-name>
            <interceptor-class>org.jboss.as.test.integration.ejb.interceptor.method.TopSecretInterceptor
            </interceptor-class>
            <method>
                <method-name>methodWithFloatArrayArgument</method-name>
                <method-params>
                    <method-param>java.lang.float[]</method-param>
                </method-params>
            </method>
        </interceptor-binding>
        <interceptor-binding>
            <ejb-name>ClassifiedBean</ejb-name>
            <interceptor-class>org.jboss.as.test.integration.ejb.interceptor.method.TopSecretInterceptor
            </interceptor-class>
            <method>
                <method-name>methodWithIntArrayArgument</method-name>
                <method-params>
                    <method-param>int[]</method-param>
                </method-params>
            </method>
        </interceptor-binding>
        <interceptor-binding>
            <ejb-name>ClassifiedBean</ejb-name>
            <interceptor-class>org.jboss.as.test.integration.ejb.interceptor.method.TopSecretInterceptor
            </interceptor-class>
            <method>
                <method-name>methodWithShortArrayArgument</method-name>
                <method-params>
                    <method-param>java.lang.short[]</method-param>
                </method-params>
            </method>
        </interceptor-binding>
        <interceptor-binding>
            <ejb-name>ClassifiedBean</ejb-name>
            <interceptor-class>org.jboss.as.test.integration.ejb.interceptor.method.TopSecretInterceptor
            </interceptor-class>
            <method>
                <method-name>methodWithLongArrayArgument</method-name>
                <method-params>
                    <method-param>long[]</method-param>
                </method-params>
            </method>
        </interceptor-binding>
        <interceptor-binding>
            <ejb-name>ClassifiedBean</ejb-name>
            <interceptor-class>org.jboss.as.test.integration.ejb.interceptor.method.TopSecretInterceptor
            </interceptor-class>
            <method>
                <method-name>methodWithStringArrayArgument</method-name>
                <method-params>
                    <method-param>java.lang.String[]</method-param>
                </method-params>
            </method>
        </interceptor-binding>
    </assembly-descriptor>
   
</ejb-jar>
